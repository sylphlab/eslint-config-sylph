{
  "compilerOptions": {
    "target": "ES2022", // Target modern Node.js versions
    "module": "NodeNext", // Use Node.js native ES modules
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true, // Generate .d.ts files
    "declarationMap": true, // Optional: Generate sourcemaps for .d.ts files
    "sourceMap": true, // Generate .js.map files
    "outDir": "./dist", // Output directory for compiled JS
    // "rootDir": "./src", // Let TS infer rootDir based on includes
    "types": ["node"], // Include Node.js types
    "lib": ["ES2022"],
    "composite": true, // Enable project references
    "declarationMap": true, // Ensure declaration maps are generated (needed for composite)
    "baseUrl": ".", // Needed for paths mapping
    "paths": { // Map workspace packages to their source for local dev/build resolution
      "@sylphlab/eslint-config-sylph": ["./packages/base/src/index.ts"], // Renamed base package path
      "@sylphlab/eslint-config-sylph-react": ["./packages/react/src/index.ts"],
      "@sylphlab/eslint-config-sylph-vue": ["./packages/vue/src/index.ts"],
      "@sylphlab/eslint-config-sylph-rn": ["./packages/rn/src/index.ts"]
    }
  },
  "references": [
    { "path": "./packages/base/tsconfig.build.json" },
    { "path": "./packages/react/tsconfig.build.json" },
    { "path": "./packages/vue/tsconfig.build.json" },
    { "path": "./packages/rn/tsconfig.build.json" }
  ],
  // Root include should be empty or minimal when using project references for building packages
  "include": [],
  "exclude": [
    "node_modules",
    "dist"
  ]
}