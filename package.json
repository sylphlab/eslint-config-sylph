{
  "name": "eslint-config-sylph-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "Monorepo for SylphLab ESLint configurations (Base, React, Vue, RN)",
  "scripts": {
    "build": "tsc -b",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "prettier --write . --cache --ignore-unknown",
    "check-format": "prettier --check . --cache --ignore-unknown",
    "validate": "pnpm run check-format && pnpm -r validate",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm run build && pnpm install --frozen-lockfile && changeset publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sylphlab/eslint-config-sylph.git"
  },
  "author": "SylphLab <hi@sylphlab.com> (https://sylphlab.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sylphlab/eslint-config-sylph/issues"
  },
  "homepage": "https://github.com/sylphlab/eslint-config-sylph#readme",
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "eslint": "^9.0.0",
    "ts-node": "^10.9.0",
    "@eslint/js": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-native": "^4.1.0",
    "eslint-plugin-unicorn": "^52.0.0",
    "eslint-plugin-vue": "^9.20.0",
    "vue-eslint-parser": "^9.4.0",
    "react": ">=16.8.0",
    "react-native": ">=0.60.0",
    "globals": "^15.0.0",
    "@eslint/eslintrc": "^3.0.0",
    "@types/eslint-plugin-jsx-a11y": "^6.6.0",
    "@types/node": "^20.0.0"
  }
}