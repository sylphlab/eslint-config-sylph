{
  "name": "@sylphlab/eslint-config-sylph",
  "version": "1.0.0",
  "description": "Shared ESLint Flat Configuration for SylphLab projects",
  "main": "./dist/eslint.config.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/eslint.config.js",
      "types": "./dist/eslint.config.d.ts"
    },
    "./base": {
      "import": "./dist/src/base.js",
      "types": "./dist/src/base.d.ts"
    },
    "./react": {
      "import": "./dist/src/react.js",
      "types": "./dist/src/react.d.ts"
    },
    "./vue": {
      "import": "./dist/src/vue.js",
      "types": "./dist/src/vue.d.ts"
    },
    "./rn": {
      "import": "./dist/src/rn.js",
      "types": "./dist/src/rn.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "lint": "eslint . --cache --max-warnings=0",
    "format": "prettier --write . --cache --ignore-unknown",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm run build && changeset publish",
    "prepublishOnly": "pnpm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sylphlab/eslint-config-sylph.git"
  },
  "keywords": [
    "eslint",
    "eslintconfig",
    "sylphlab",
    "typescript",
    "flatconfig"
  ],
  "author": "SylphLab <hi@sylphlab.com> (https://sylphlab.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sylphlab/eslint-config-sylph/issues"
  },
  "homepage": "https://github.com/sylphlab/eslint-config-sylph#readme",
  "dependencies": {
    "@eslint/eslintrc": "^3.0.0",
    "globals": "^15.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-unicorn": "^52.0.0",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "@eslint/js": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^9.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unicorn": "^52.0.0",
    "eslint-plugin-vue": "^9.20.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "vue-eslint-parser": "^9.4.0"
  },
  "peerDependenciesMeta": {
    "eslint-plugin-jsx-a11y": {
      "optional": true
    },
    "eslint-plugin-react": {
      "optional": true
    },
    "eslint-plugin-react-hooks": {
      "optional": true
    },
    "eslint-plugin-vue": {
      "optional": true
    },
    "vue-eslint-parser": {
      "optional": true
    }
  }
}