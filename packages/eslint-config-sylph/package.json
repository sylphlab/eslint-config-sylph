{
  "name": "@sylphlab/eslint-config-sylph",
  "version": "3.0.3",
  "description": "Strict, opinionated ESLint Flat Config for modern TypeScript projects (v9+, TS, Unicorn, Functional, Security, Sonar, Import, Promise, Regexp, Prettier).",
  "main": "./dist/index.js",
  "types": "./dist/src/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/src/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/src/index.d.ts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint . --cache --max-warnings=0",
    "lint:fix": "eslint . --fix --cache",
    "validate": "pnpm run lint && pnpm run build",
    "clean": "rimraf dist .turbo"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sylphlab/typescript.git",
    "directory": "packages/eslint-config-sylph"
  },
  "keywords": [
    "eslint",
    "eslintconfig",
    "eslint-config",
    "config",
    "flat config",
    "eslint9",
    "typescript",
    "typescript-eslint",
    "unicorn",
    "functional",
    "security",
    "sonarjs",
    "import",
    "promise",
    "regexp",
    "prettier",
    "strict",
    "opinionated",
    "sylph",
    "sylphlab"
  ],
  "author": "SylphLab <hi@sylphlab.com> (https://sylphlab.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sylphlab/typescript/issues"
  },
  "homepage": "https://github.com/sylphlab/typescript/tree/main/packages/eslint-config-sylph#readme",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "globals": "^15.3.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.0.0-alpha.31"
  },
  "peerDependencies": {
    "@eslint/js": "^9.3.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0-alpha.31",
    "@typescript-eslint/parser": "^8.0.0-alpha.31",
    "eslint": "^9.3.0",
    "eslint-config-prettier": "^9.1.0 || ^10.0.0",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-functional": "^6.5.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.2.0",
    "eslint-plugin-regexp": "^2.6.0",
    "eslint-plugin-security": "^3.0.0",
    "eslint-plugin-sonarjs": "^1.0.3",
    "eslint-plugin-unicorn": "^53.0.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  }
}