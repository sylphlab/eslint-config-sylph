{
  "name": "@sylphlab/eslint-config-sylph-rn",
  "version": "4.0.0",
  "description": "React Native ESLint Flat Config for SylphLab projects.",
  "main": "./dist/index.js",
  "types": "./dist/src/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/src/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/src/index.d.ts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist/src"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint . --cache --max-warnings=0",
    "lint:fix": "eslint . --fix --cache",
    "validate": "pnpm run lint && pnpm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sylphlab/typescript.git",
    "directory": "packages/eslint-config-sylph-rn"
  },
  "keywords": [
    "eslint",
    "eslintconfig",
    "flat config",
    "typescript",
    "react",
    "react-native",
    "sylphlab"
  ],
  "author": "SylphLab <hi@sylphlab.com> (https://sylphlab.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sylphlab/typescript/issues"
  },
  "homepage": "https://github.com/sylphlab/typescript/tree/main/packages/eslint-config-sylph-rn#readme",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@sylphlab/eslint-config-sylph-react": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^7.0.0"
  },
  "peerDependencies": {
    "@sylphlab/eslint-config-sylph-react": "workspace:*",
    "eslint-plugin-react-native": "^4.1.0",
    "@eslint/js": "^9.3.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0-alpha.31",
    "@typescript-eslint/parser": "^8.0.0-alpha.31",
    "eslint": "^9.3.0",
    "eslint-config-prettier": "^9.1.0 || ^10.0.0",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-import-resolver-typescript": "^3.6.1 || ^4.0.0",
    "eslint-plugin-functional": "^6.5.0 || ^9.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.2.0 || ^7.0.0",
    "eslint-plugin-react": "^7.34.2",
    "eslint-plugin-react-hooks": "^4.6.2 || ^5.0.0",
    "eslint-plugin-regexp": "^2.6.0",
    "eslint-plugin-security": "^3.0.0",
    "eslint-plugin-sonarjs": "^1.0.3",
    "eslint-plugin-unicorn": "^53.0.0",
    "globals": "^15.3.0",
    "prettier": "^3.2.5",
    "react": ">=16.8.0",
    "react-native": ">=0.60.0",
    "typescript": "^5.4.5"
  }
}