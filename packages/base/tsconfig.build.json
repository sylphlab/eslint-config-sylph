{
  "extends": "../../tsconfig.json", // Inherit from root tsconfig
  "compilerOptions": {
    "outDir": "./dist", // Output directory for this package
    "rootDir": "./src", // Source directory for this package
    // Ensure settings needed for declaration files and JS output are correct
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": false, // Make sure we actually emit files
    "composite": true // Enable project references
  },
  // No internal package references needed for base
  "include": ["src/**/*"], // Only include source files of this package
  "exclude": ["node_modules", "dist"] // Exclude node_modules and output dir
}