{
  "extends": "../../tsconfig.json", // Inherit from workspace root tsconfig
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": false,
    // No specific JSX setting needed for Vue config logic
    "composite": true // Enable project references
  },
  "references": [ // Vue depends on base
    { "path": "../base/tsconfig.build.json" }
  ],
  "include": ["src/**/*.ts", "src/**/*.d.ts"], // Explicitly include .d.ts for stubs
  "exclude": ["node_modules", "dist"]
}