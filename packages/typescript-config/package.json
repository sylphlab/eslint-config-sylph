{
  "name": "@sylphlab/typescript-config",
  "version": "0.2.0",
  "description": "Reusable TypeScript configurations for SylphLab projects",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    "./base": "./dist/base.json",
    "./node": "./dist/node.json",
    "./dom": "./dist/dom.json",
    "./react": "./dist/react.json",
    "./vue": "./dist/vue.json",
    "./react-native": "./dist/react-native.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "mkdir -p dist && node build.js",
    "clean": "rimraf dist",
    "lint": "eslint . --ext .js,.ts",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {},
  "devDependencies": {
    "rimraf": "^5.0.0",
    "typescript": "^5.2.0"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  }
}
