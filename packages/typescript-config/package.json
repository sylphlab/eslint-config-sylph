{
  "name": "@sylphlab/typescript-config",
  "version": "0.2.3",
  "description": "Reusable TypeScript configurations for SylphLab projects",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "typescript",
    "tsconfig",
    "configuration",
    "sylphlab",
    "strict",
    "preset",
    "base",
    "react",
    "vue",
    "node"
  ],
  "exports": {
    "./base": "./dist/base.json",
    "./node": "./dist/node.json",
    "./dom": "./dist/dom.json",
    "./react": "./dist/react.json",
    "./vue": "./dist/vue.json",
    "./react-native": "./dist/react-native.json",
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "node build.js",
    "clean": "rimraf dist",
    "lint": "eslint . --ext .js,.ts",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {},
  "devDependencies": {
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "typescript": ">=5.8.3"
  }
}
