{
  "extends": "../../tsconfig.json", // Inherit from workspace root tsconfig
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "typeRoots": ["./src/types", "../../node_modules/@types"],
    "composite": true // Enable project references
  },
  "references": [ // React depends on base
    { "path": "../base/tsconfig.build.json" }
  ],
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}